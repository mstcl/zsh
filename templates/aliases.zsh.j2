##########
#  Sudo  #
##########

alias sudo="sudo "
alias sunv='sudo -E nvim $1'
alias sue='sudo -E $1'

###########################
#  Force colored outputs  #
###########################

alias grep='grep --color=always'
alias fgrep='fgrep --color=always'
alias egrep='egrep --color=always'
alias diff='diff --color=always'
alias ip='ip --color=always'
{% if utilities.grc %}
alias fdisk="sudo grc fdisk -l"
{% endif %}

#####################
#  File operations  #
#####################

alias mkp="mkdir -p" # [mk]dir -[p]
alias t='touch'      # [t]ouch
alias mv='mv -iv'
alias rm='rm -iv'
alias cp='cp -iv'
alias ln='ln -iv'

alias rmv='trash-put'     # [r]e[m]o[v]e
alias rst='trash-restore' # [r]e[st]ore

alias chown='chown --preserve-root'
alias chmod='chmod --preserve-root'
alias chgrp='chgrp --preserve-root'

alias q='exit' # [q]uit

#########
#  Bat  #
#########

alias b='bat'                     # [b]at
alias bp='bat -pp --color=always' # [b]at [p]lain

##########
#  Nvim  #
##########

alias nv='nvim' # [nv]im

###############
#  Systemctl  #
###############

alias sc='sudo systemctl'    # [s]ystem[c]tl
alias scu='systemctl --user' # [s]ystem[c]tl [u]ser

#############
#  Ansible  #
#############

alias ap="ansible-playbook"    # [a]nsible [p]laybook
alias ac="ansible-playbook -C" # [a]nsible [c]heck only

#######################
#  Directory listing  #
#######################

{% if utilities.eza %}
alias lt='eza --color=always -h --git --git-ignore --group-directories-first -T'                                  # [l]ist [t]ree
alias lta='eza --color=always -h --group-directories-first --git --git-ignore -T -a'                              # list tree all
alias l='eza --color=always --group-directories-first -h --git --git-ignore'                                      # [l]ist
alias la='eza --color=always --group-directories-first -h --git -a'                                               # [l]ist all
alias ll='eza -l --color=always --group-directories-first -h --git'                                               # [l]ist [l]ong
alias lla='eza -l --color=always --group-directories-first -h --git -a'                                           # [l]ist [l]ong [a]ll
alias tree='erd --color force --hidden -L 3 --no-progress --suppress-size --no-git --no-ignore -x -f -y inverted' # tree replacement
{% else %}
alias l='ls'       # [l]ist
alias ll='ls -lh'  # [l]ist [l]ong
alias la='ls -lha' # [l]ist [a]ll
{% endif %}

