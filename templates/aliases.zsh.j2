alias g='git'                # [g]it
alias gsa='git status'       # [g]it [s]tatus [a]ll
alias gss='git status -s'    # [g]it [s]tatus [s]taged
alias gre='git remote -v'    # [g]it [re]mote
alias gdi='git diff'         # [g]it [di]ff
alias gin='git init'         # [g]it [in]it
alias gpu='git push'         # [g]it [pu]sh
alias gad='git add'          # [g]it [ad]d
alias gfe='git fetch'        # [g]it [fe]tch
alias gra='git remote add'   # [g]it [r]emote [a]dd
alias glo='git log'          # [g]it [lo]g
alias gpl='git pull'         # [g]it [p]u[l]l
alias gcl='git clone'        # [g]it [cl]one
alias gbr='git branch'       # [g]it [br]anch
alias gco='git checkout'     # [g]it [c]heck[o]ut
alias gsl='git shortlog -sn' # [g]it [s]hort[log]
alias gcp='git cherry-pick'  # [g]it [c]herry [p]ick

##################
#  Pacman & aur  #
##################

{% if aur_helper != "sudo pacman" %}
alias pst='{{ aur_helper }} -Ps'                                     # [st]ats
alias pnw='{{ aur_helper }} -Pw'                                     # [n]e[w]s
{% endif %}
alias pup='{{ aur_helper }} -Syu --removemake --sudoloop'            # [up]date
alias pid='{{ aur_helper }} -U'                                      # [i]nstall from [d]atabase
alias pir='{{ aur_helper }} -S'                                      # [i]nstall from [r]emote
alias pni='{{ aur_helper }} -Qi'                                     # i[n]fo of [i]nstalled
alias pna='{{ aur_helper }} -Si'                                     # i[n]fo of [a]ny
alias psi='{{ aur_helper }} -Qs'                                     # [s]each [i]nstalled
alias psa='{{ aur_helper }} -Ss'                                     # [s]earch [a]ny
alias pfi='{{ aur_helper }} -Qo'                                     # [f]ile owned by [i]nstalled
alias pfa='{{ aur_helper }} -F'                                      # [f]ile owned by [a]ny
alias plf='{{ aur_helper }} -Ql'                                     # [l]ist [f]iles owned
alias pla='{{ aur_helper }} -Q'                                      # [l]ist [a]ll installed
alias ple='{{ aur_helper }} -Qe'                                     # [l]ist [e]xplicit installed
alias poa='{{ aur_helper }} -Qdt'                                    # [o]rphaned [a]ll
alias poe='{{ aur_helper }} -Qet'                                    # [o]rphaned [e]xplicity
alias pcd='{{ aur_helper }} -Scd'                                    # [c]lean and [d]elete cache
alias pil="grep -i installed /var/log/pacman.log | cut -d ' ' -f1,4" # [i]nstalled [l]og
alias prl="grep -i removed /var/log/pacman.log | cut -d ' ' -f1,4"   # [r]emoved [l]og
alias pul="grep -i upgraded /var/log/pacman.log | cut -d ' ' -f1,4"  # [u]pdated [l]og
