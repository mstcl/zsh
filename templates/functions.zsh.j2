###################################
#  Make directory & move into it  #
###################################

function mkcd {
	command mkdir $1 && cd $1
}

############################
#  Git commit interactive  #
############################

gcm() {
	echo -e "Enter commit message:"
	message=""
	while [ -z "$message" ]; do
		IFS= read -r message
		wait
		sleep 1
	done
	git commit -m "$message"
	message=""
}

